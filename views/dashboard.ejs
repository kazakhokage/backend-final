<!DOCTYPE html>
<html lang="<%= i18n.language %>">
<head>
    <meta charset="UTF-8">
    <title><%= t('title_dashboard') %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav class="navbar">
    <div class="navbar-container">
        <a href="/main" class="navbar-brand"><%= t('financial_market_analysis') %></a>
        <div class="navbar-links">
            <a href="/main"><%= t('main') %></a>
            <a href="/dashboard"><%= t('dashboard') %></a>
            <a href="/stocks"><%= t('stocks') %></a>
        </div>
        <select onchange="if(this.value !== '') { window.location = '/language/' + this.value; }">
            <option value="" selected disabled hidden>Select Language</option>
            <option value="en"><%= t('language_english') %></option>
            <option value="ru"><%= t('language_russian') %></option>
            <option value="kz"><%= t('language_kazakh') %></option>
        </select>
    </div>
</nav>
<div class="dashboard-container">
    <div class="conversion-section">
        <div class="conversion-form">
            <form id="currencyConversionForm">
                <label for="amount"><%= t('amount') %>:</label>
                <input type="number" id="amount" name="amount" min="1" step="any" required>

                <label for="currency"><%= t('currency') %>:</label>
                <select id="currency" name="currency">
                </select>

                <button type="submit"><%= t('convert') %></button>
            </form>
            <div id="conversionResult"></div>
        </div>
    </div>
    <div class="rates-section">
        <h2><%= t('current_currency_rates') %></h2>
        <div id="currencyRates">
        </div>
    </div>
</div>

<script src="/public/js/script.js"></script>
</body>
</html>
